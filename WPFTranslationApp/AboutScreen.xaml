        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTranslationApp"
        mc:Ignorable="d"
        Title="AboutScreen" Height="450" Width="800">
    <Grid>
        <Label 
            Content="VisualLang" 
            HorizontalAlignment="Left" 
            Margin="53,33,0,0" 
            VerticalAlignment="Top"/>
        
        <TextBox 
            x:Name="AboutText"
            HorizontalAlignment="Left" 
            Height="305" Margin="53,64,0,0" 
            TextWrapping="Wrap" 
            Text="TextBox" 
            VerticalAlignment="Top" 
            Width="525"/>


    </Grid>
