<Window x:Class="WPFTranslationApp.AboutScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTranslationApp"
        mc:Ignorable="d"
        Title="AboutScreen" Height="450" Width="676.923">
    <Grid Margin="0,0,5,0.5">
        <Label 
            Content="VisualLang" 
            Margin="10,10,0,0"
            FontSize="27" Height="46" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Left" 
            Width="138"
           
            
            />

        <TextBox 
            x:Name="AboutText" Margin="10,61,207,10" 
            TextWrapping="Wrap" 
            Text="About" 
            FontSize="18" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>

        <TextBox 
            x:Name="CreditsBox" 
            Margin="0,61,10,10.5" 
            TextWrapping="Wrap" 
            Text="Credits" 
            FontSize="12" HorizontalAlignment="Right" Width="189" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>


    </Grid>
</Window>
